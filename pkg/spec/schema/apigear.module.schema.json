{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "Enum": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "members": {
          "items": {
            "$ref": "#/definitions/EnumMember"
          },
          "type": "array"
        },
        "meta": {
          "type": "object"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "EnumMember": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "meta": {
          "type": "object"
        },
        "name": {
          "type": "string"
        },
        "value": {
          "type": "integer"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "Interface": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "meta": {
          "type": "object"
        },
        "name": {
          "type": "string"
        },
        "operations": {
          "items": {
            "$ref": "#/definitions/Operation"
          },
          "type": "array"
        },
        "properties": {
          "items": {
            "$ref": "#/definitions/NamedType"
          },
          "type": "array"
        },
        "signals": {
          "items": {
            "$ref": "#/definitions/Operation"
          },
          "type": "array"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "NamedType": {
      "additionalProperties": false,
      "properties": {
        "array": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "meta": {
          "type": "object"
        },
        "name": {
          "type": "string"
        },
        "readonly": {
          "type": "boolean"
        },
        "type": {
          "$ref": "#/definitions/TypeKey"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "type": "object"
    },
    "Operation": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "meta": {
          "type": "object"
        },
        "name": {
          "type": "string"
        },
        "params": {
          "items": {
            "$ref": "#/definitions/NamedType"
          },
          "type": "array"
        },
        "return": {
          "$ref": "#/definitions/Type"
        }
      },
      "type": "object"
    },
    "Struct": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "fields": {
          "items": {
            "$ref": "#/definitions/NamedType"
          },
          "type": "array"
        },
        "meta": {
          "type": "object"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "Type": {
      "additionalProperties": false,
      "properties": {
        "array": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        },
        "meta": {
          "type": "object"
        },
        "type": {
          "$ref": "#/definitions/TypeKey"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "TypeKey": {
      "oneOf": [
        {
          "enum": [
            "int",
            "int32",
            "int64",
            "float",
            "float32",
            "float64",
            "bool",
            "string"
          ],
          "type": "string"
        },
        {
          "pattern": "^[A-Z][0-9A-Za-z_]+$",
          "type": "string"
        }
      ]
    }
  },
  "properties": {
    "description": {
      "description": "the module description. Will be added to the module documentation",
      "type": "string"
    },
    "enums": {
      "description": "a list of enumerations, exported by this module",
      "items": {
        "$ref": "#/definitions/Enum"
      },
      "type": "array"
    },
    "interfaces": {
      "description": "a list of interfaces, exported by this module",
      "items": {
        "$ref": "#/definitions/Interface"
      },
      "type": "array"
    },
    "meta": {
      "description": "meta information are read by the individual blueprint. Read the blueprint manual which meta tags are supported.",
      "type": "object"
    },
    "name": {
      "description": "module name, should be all lowercase and only contain letters and dots.",
      "type": "string"
    },
    "schema": {
      "description": "The ApiGear ObjectAPI specification version of this document.",
      "enum": [
        "apigear.module/1.0"
      ],
      "type": "string"
    },
    "structs": {
      "description": "a list of data structures, exported by this module",
      "items": {
        "$ref": "#/definitions/Struct"
      },
      "type": "array"
    },
    "version": {
      "description": "the version of this document as string, typically something like '1.0'",
      "type": "string"
    }
  },
  "required": [
    "name",
    "version"
  ],
  "title": "ObjectAPI 1.0 Schema",
  "type": "object"
}